<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />

  </configSections>
  <log4net>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="E:\log-file.txt" />
      <appendToFile value="true"/>
      <rollingStyle value="Size" />
      <maximumFileSize value="1MB" />
      <staticLogFileName value="true" />
      <maxSizeRollBackups value="10" />
      <conversionPattern value="%date [%thread] %-5level %location %logger -    %message%newline" />
      <layout type="log4net.Layout.SimpleLayout" />
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>
  <connectionStrings>
    <add name="BazaLuFane"
          connectionString="Provider=Microsoft.ACE.OLEDB.12.0;Data Source=C:\Users\george\Source\Workspaces\FANECOMv2\SC.FANECOM.SRL\FaneComDatabase.accdb;Jet OLEDB:Database Password="
          providerName="System.Data.OleDb" />
  </connectionStrings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <appSettings>
    <add key="InvoicePath" value="E:\Results\Test\"/>
  </appSettings>
</configuration>